@model List<SistemErasmusRazmjena.Models.ErasmusProgram>
@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero section with prominent login/register buttons -->
<div class="py-5 bg-primary text-white rounded-3 mb-4">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-md-@(User?.Identity?.IsAuthenticated == true ? "12" : "8")">
                <h1 class="display-4 fw-bold">Erasmus Exchange Programs</h1>
                <p class="lead">Explore international study opportunities and expand your academic horizons</p>
            </div>
            @if (User?.Identity?.IsAuthenticated != true)
            {
                <div class="col-md-4 text-md-end mt-3 mt-md-0">
                    <a href="/Account/Login" class="btn btn-light btn-lg me-2">Login</a>
                    <a href="/Account/Register" class="btn btn-outline-light btn-lg">Register</a>
                </div>
            }
        </div>
    </div>
</div>

<!-- Featured Programs section -->
<div class="container my-5">
    <h2 class="text-center mb-4">Available Erasmus Programs</h2>
    
    @if (Model != null && Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var program in Model)
            {
                <div class="col">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@program.Univerzitet</h5>
                            <h6 class="card-subtitle mb-2 text-muted">
                                Semester: @program.Semestar | Academic Year: @program.AkademskaGodina
                            </h6>
                            <p class="card-text">@program.Opis</p>
                        </div>
                        <div class="card-footer bg-transparent border-0">
                            <a href="/ErasmusProgram/Details/@program.ID" class="btn btn-outline-primary">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <p class="mb-0">No Erasmus programs are currently available. Please check back later.</p>
        </div>
        
        <!-- Sample placeholder cards for demonstration -->
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @for (int i = 0; i < 3; i++)
            {
                <div class="col">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">Example University @(i+1)</h5>
                            <h6 class="card-subtitle mb-2 text-muted">
                                Semester: @(i % 2 + 1) | Academic Year: 2025/2026
                            </h6>
                            <p class="card-text">
                                Study abroad at this prestigious institution and experience a diverse academic environment
                                with cutting-edge research opportunities and cultural exchange.
                            </p>
                        </div>
                        <div class="card-footer bg-transparent border-0">
                            <button class="btn btn-outline-secondary" disabled>Coming Soon</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<!-- Benefits section remains the same -->
<div class="bg-light py-5">
    <div class="container">
        <h2 class="text-center mb-4">Why Choose Erasmus?</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="text-center">
                    <i class="bi bi-globe" style="font-size: 2.5rem; color: #0d6efd;"></i>
                    <h4 class="mt-3">Global Perspective</h4>
                    <p>Experience new cultures and expand your worldview through international study.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="text-center">
                    <i class="bi bi-book" style="font-size: 2.5rem; color: #0d6efd;"></i>
                    <h4 class="mt-3">Academic Excellence</h4>
                    <p>Learn from leading professors and access resources at top universities.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="text-center">
                    <i class="bi bi-briefcase" style="font-size: 2.5rem; color: #0d6efd;"></i>
                    <h4 class="mt-3">Career Advancement</h4>
                    <p>Enhance your resume with international experience valued by employers.</p>
                </div>
            </div>
        </div>
    </div>
</div>
