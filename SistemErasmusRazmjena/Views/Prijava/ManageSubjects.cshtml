@model SistemErasmusRazmjena.Models.Prijava

@{
    ViewData["Title"] = "Application Details";
}

<div class="container">
    <h1 class="mb-4">Application Details</h1>

    <div class="row">
        <!-- Main Content -->
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">@Model.ErasmusProgram.Univerzitet</h4>
                    <span class="badge fs-6 @Model.Status switch {
                        StatusPrijave.UTOKU => "bg-warning text-dark",
                        StatusPrijave.USPJESNA => "bg-success",
                        _ => "bg-danger"
                    }">
                        @Model.Status switch {
                            StatusPrijave.UTOKU => "In Progress",
                            StatusPrijave.USPJESNA => "Successful",
                            _ => "Unsuccessful"
                        }
                    </span>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <p><strong>Academic Year:</strong> @Model.ErasmusProgram.AkademskaGodina</p>
                            <p><strong>Semester:</strong> @Model.ErasmusProgram.Semestar</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Student:</strong> @Model.Student.Email</p>
                            <p><strong>Application ID:</strong> @Model.ID</p>
                        </div>
                    </div>

                    <!-- Documentation Status -->
                    <h5>Documentation Status</h5>
                    <div class="table-responsive mb-4">
                        <table class="table table-bordered">
                            <tbody>
                                @foreach (var doc in new[] {
                                    new { Name = "CV/Resume", Provided = Model.Dokumentacija.CV },
                                    new { Name = "Motivation Letter", Provided = Model.Dokumentacija.MotivacionoPismo },
                                    new { Name = "Learning Agreement", Provided = Model.Dokumentacija.UgovorOUcenju }
                                })
                                {
                                    <tr>
                                        <th>@doc.Name</th>
                                        <td>
                                            <span class="@doc.Provided ? "text-success" : "text-danger"">
                                                <i class="bi @doc.Provided ? "bi-check-circle" : "bi-x-circle" me-1"></i>
                                                @doc.Provided ? "Provided" : "Not Provided"
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Proposed Subjects -->
                    <h5>Proposed Subjects</h5>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th>#</th>
                                    <th>Subject at Home University</th>
                                    <th>Subject at Accepting University</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.PrijedlogPredmeta.Rows?.Any() == true)
                                {
                                    @foreach (var (predmet, index) in Model.PrijedlogPredmeta.Rows.Select((p, i) => (p, i)))
                                    {
                                        <tr>
                                            <td>@(index + 1)</td>
                                            <td>@predmet.PredmetHome</td>
                                            <td>@predmet.PredmetAccepting</td>
                                            <td>
                                                <span class="badge @predmet.Status switch {
                                                    SistemErasmusRazmjena.Models.StatusPredmeta.NACEKANJU => "bg-warning text-dark",
                                                    SistemErasmusRazmjena.Models.StatusPredmeta.ODOBRENO => "bg-success",
                                                    _ => "bg-danger"
                                                }">
                                                    @predmet.Status switch {
                                                        SistemErasmusRazmjena.Models.StatusPredmeta.NACEKANJU => "Pending",
                                                        SistemErasmusRazmjena.Models.StatusPredmeta.ODOBRENO => "Approved",
                                                        _ => "Rejected"
                                                    }
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center">No subjects provided</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Edit Application -->
                    @if (Model.Status == SistemErasmusRazmjena.Models.StatusPrijave.NEUSPJESNA && User.IsInRole("Student"))
                    {
                        <h5>Edit Your Application</h5>
                        <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-primary">Edit Application</a>
                    }
                </div>
            </div>
        </div>

        <!-- Sidebar for Actions -->
        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Actions</h5>
                </div>
                <div class="card-body">
                    @if (User.IsInRole("Admin") || User.IsInRole("ECTSKoordinator"))
                    {
                        @if (Model.Status == SistemErasmusRazmjena.Models.StatusPrijave.UTOKU)
                        {
                            <form asp-action="UpdateStatus" method="post" class="mb-3">
                                <input type="hidden" name="id" value="@Model.ID" />
                                <input type="hidden" name="status" value="@(SistemErasmusRazmjena.Models.StatusPrijave.USPJESNA)" />
                                <button type="submit" class="btn btn-success w-100 mb-2">
                                    <i class="bi bi-check-circle me-1"></i> Approve Application
                                </button>
                            </form>

                            <form asp-action="UpdateStatus" method="post">
                                <input type="hidden" name="id" value="@Model.ID" />
                                <input type="hidden" name="status" value="@(SistemErasmusRazmjena.Models.StatusPrijave.NEUSPJESNA)" />
                                <button type="submit" class="btn btn-danger w-100">
                                    <i class="bi bi-x-circle me-1"></i> Reject Application
                                </button>
                            </form>
                        }
                        else
                        {
                            <div class="alert alert-info">
                                <i class="bi bi-info-circle me-2"></i>
                                This application has been processed and is no longer editable.
                            </div>
                        }
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle me-2"></i>
                            Your application is being reviewed. Please check back later for updates.
                        </div>
                    }

                    <div class="d-grid gap-2 mt-3">
                        <a asp-action="@User.IsInRole("Student") ? "MyApplications" : "Index"" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i> Back to @User.IsInRole("Student") ? "My Applications" : "Applications"
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@if (Model.Status == SistemErasmusRazmjena.Models.StatusPrijave.UTOKU)
{
    <!-- Additional content can be added here if needed -->
}
