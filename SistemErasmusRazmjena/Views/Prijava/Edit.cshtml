@model SistemErasmusRazmjena.Models.Prijava

@{
    ViewData["Title"] = "Edit Application";
}

<h1>Edit Application</h1>

<form asp-action="Resubmit" method="post">
    <input type="hidden" name="id" value="@Model.ID" />

    <h4>Update Documentation</h4>
    <div class="form-check">
        <input class="form-check-input" type="checkbox" id="CV" name="CV" @(Model.Dokumentacija.CV ? "checked" : "") />
        <label class="form-check-label" for="CV">CV Provided</label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="checkbox" id="MotivacionoPismo" name="MotivacionoPismo" @(Model.Dokumentacija.MotivacionoPismo ? "checked" : "") />
        <label class="form-check-label" for="MotivacionoPismo">Motivation Letter Provided</label>
    </div>

    <h4>Update Subjects</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Home Subject</th>
                <th>Accepting Subject</th>
            </tr>
        </thead>
        <tbody>
            @for (var i = 0; i < Model.PrijedlogPredmeta.Rows.Count; i++)
            {
                <tr>
                    <td>
                        <input type="text" name="updatedSubjects[@i].PredmetHome" value="@Model.PrijedlogPredmeta.Rows[i].PredmetHome" class="form-control" />
                    </td>
                    <td>
                        <input type="text" name="updatedSubjects[@i].PredmetAccepting" value="@Model.PrijedlogPredmeta.Rows[i].PredmetAccepting" class="form-control" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-success">Resubmit Application</button>
</form>
