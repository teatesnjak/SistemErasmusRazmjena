@model SistemErasmusRazmjena.Models.ViewModels.PrijavaViewModel

@{
    ViewData["Title"] = "Application Details";
}

<div class="container">
    <h1 class="mb-4">Application Details</h1>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Erasmus Program ID: @Model.ErasmusProgramID</h4>
                </div>
                <div class="card-body">
                    <h5>Proposed Subjects</h5>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th>#</th>
                                    <th>Subject at Home University</th>
                                    <th>Subject at Accepting University</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Predmeti != null && Model.Predmeti.Any())
                                {
                                    @for (var i = 0; i < Model.Predmeti.Count; i++)
                                    {
                                        var predmet = Model.Predmeti[i];
                                        <tr>
                                            <td>@(i + 1)</td>
                                            <td>@predmet.PredmetHome</td>
                                            <td>@predmet.PredmetAccepting</td>
                                            <td>
                                                @if (predmet.Status == "NACEKANJU")
                                                {
                                                    <span class="badge bg-warning text-dark">Pending</span>
                                                }
                                                else if (predmet.Status == "ODOBRENO")
                                                {
                                                    <span class="badge bg-success">Approved</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Rejected</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center">No subjects provided</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2 mt-3">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i> Back to Applications
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
