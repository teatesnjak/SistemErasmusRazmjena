@model PrijavaSegmentedViewModel

@{
    ViewData["Title"] = "Applications";
    var isCoordinator = User.IsInRole("ECTSKoordinator");
}

<div class="container">
    <h1 class="mb-4">Sve prijave</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            <i class="bi bi-check-circle me-2"></i>
            @TempData["SuccessMessage"]
        </div>
    }

    <div class="row">
        <!-- In Progress Applications -->
        <div class="col-md-4">
            <h3 class="text-warning">U toku</h3>
            @if (!Model.UTOKU.Any())
            {
                <p>Nema prijava u toku.</p>
            }
            else
            {
                <ul class="list-group">
                    @foreach (var item in Model.UTOKU)
                    {
                        <li class="list-group-item">
                            <strong>@item.Student.FirstName @item.Student.LastName</strong> - @item.ErasmusProgram.Univerzitet
                            <br />
                            <span>Akademska godina: @item.ErasmusProgram.AkademskaGodina</span>
                            <br />
                            <span>Semestar: @item.ErasmusProgram.Semestar</span>
                            <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-sm btn-outline-primary float-end">
                                <i class="bi bi-eye"></i> Detalji
                            </a>
                        </li>
                    }
                </ul>
            }
        </div>

        <!-- Successful Applications -->
        <div class="col-md-4">
            <h3 class="text-success">Uspješna</h3>
            @if (!Model.USPJESNA.Any())
            {
                <p>Nema uspješnih prijava.</p>
            }
            else
            {
                <ul class="list-group">
                    @foreach (var item in Model.USPJESNA)
                    {
                        <li class="list-group-item">
                            <strong>@item.Student.FirstName @item.Student.LastName</strong> - @item.ErasmusProgram.Univerzitet
                            <br />
                            <span>Akademska godina: @item.ErasmusProgram.AkademskaGodina</span>
                            <br />
                            <span>Semestar: @item.ErasmusProgram.Semestar</span>
                            @if (!isCoordinator)
                            {
                                <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-sm btn-outline-primary float-end">
                                    <i class="bi bi-eye"></i> Detalji
                                </a>
                            }
                        </li>
                    }
                </ul>
            }
        </div>

        <!-- Unsuccessful Applications -->
        <div class="col-md-4">
            <h3 class="text-danger">Neuspješna</h3>
            @if (!Model.NEUSPJESNA.Any())
            {
                <p>Nema neuspješnih prijava.</p>
            }
            else
            {
                <ul class="list-group">
                    @foreach (var item in Model.NEUSPJESNA)
                    {
                        <li class="list-group-item">
                            <strong>@item.Student.FirstName @item.Student.LastName</strong> - @item.ErasmusProgram.Univerzitet
                            <br />
                            <span>Akademska godina: @item.ErasmusProgram.AkademskaGodina</span>
                            <br />
                            <span>Semestar: @item.ErasmusProgram.Semestar</span>
                            @if (!isCoordinator)
                            {
                                <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-sm btn-outline-primary float-end">
                                    <i class="bi bi-eye"></i> Detalji
                                </a>
                            }
                        </li>
                    }
                </ul>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Initialize DataTables for better sorting and searching
            $('#applicationsTable').DataTable({
                "order": [[4, "asc"]], // Sort by status by default
                "language": {
                    "search": "Filter applications:",
                    "lengthMenu": "Show _MENU_ applications per page",
                    "info": "Showing _START_ to _END_ of _TOTAL_ applications"
                }
            });
        });
    </script>
}
