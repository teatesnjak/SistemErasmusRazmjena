@model SistemErasmusRazmjena.Models.ViewModels.PrijavaCreateViewModel

@{
    ViewData["Title"] = "Nova prijava";
}

<h2>Nova prijava</h2>

<form asp-action="Create" method="post">
    @* Hidden polja – OBAVEZNO *@
    <input type="hidden" asp-for="ErasmusProgramID" />
    <input type="hidden" asp-for="StudentID" />
    <input type="hidden" asp-for="DokumentacijaOptions" />
    <input type="hidden" asp-for="PrijedlogPredmeta" />

    <div>
        <h3>Erasmus Program Details</h3>
        <p><strong>Akademska godina:</strong> @Model.AkademskaGodina</p>
        <p><strong>Naziv:</strong> @Model.Naziv</p>
        <p><strong>Semestar:</strong> @Model.Semestar</p>
        <p><strong>Opis:</strong> @Model.Opis</p>
    </div>

    <div>
        <h3>Documentation</h3>
        <label>
            <input type="checkbox" asp-for="DokumentacijaOptions.CV" /> CV
        </label>
        <label>
            <input type="checkbox" asp-for="DokumentacijaOptions.MotivacionoPismo" /> Motivational Letter
        </label>
        <label>
            <input type="checkbox" asp-for="DokumentacijaOptions.UgovorOUcenju" /> Learning Agreement
        </label>
    </div>

    <div>
        <h3>Subjects</h3>
        <table id="subjectsTable">
            <thead>
                <tr>
                    <th>Subject Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.PrijedlogPredmeta.Count; i++)
                {
                    <tr>
                        <td>
                            <input type="text" asp-for="PrijedlogPredmeta[@i].PredmetHome" class="form-control" />
                            <input type="hidden" asp-for="PrijedlogPredmeta[@i].PredmetID" />
                        </td>
                        <td>
                            <button type="button" class="btn btn-danger" onclick="removeSubject(this)">Remove</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <button type="button" class="btn btn-secondary" onclick="addSubject()">Add Subject</button>
    </div>
    @await Html.PartialAsync("_ValidationScriptsPartial")
    
    </section>

    <button type="submit" class="btn btn-primary">Sačuvaj</button>
    <div asp-validation-summary="All" class="text-danger"></div>

</form>
@section Scripts {
    <script>
        function addSubject() {
            const table = document.getElementById('subjectsTable').getElementsByTagName('tbody')[0];
            const rowCount = table.rows.length;
            const row = table.insertRow(rowCount);

            const cell1 = row.insertCell(0);
            cell1.innerHTML = `<input type="text" name="PrijedlogPredmeta[${rowCount}].PredmetHome" class="form-control" />` +
                              `<input type="hidden" name="PrijedlogPredmeta[${rowCount}].PredmetID" value="0" />`;

            const cell2 = row.insertCell(1);
            cell2.innerHTML = `<button type="button" class="btn btn-danger" onclick="removeSubject(this)">Remove</button>`;
        }

        function removeSubject(button) {
            const row = button.parentNode.parentNode;
            row.parentNode.removeChild(row);
        }
    </script>
}
