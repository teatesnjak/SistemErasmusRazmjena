@model IEnumerable<SistemErasmusRazmjena.Models.Prijava>

@{
    ViewData["Title"] = "My Applications";
}

<div class="container">
    <h1 class="mb-4">My Applications</h1>
    
    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>
            You haven't applied to any Erasmus programs yet.
        </div>
        <div class="mt-3">
            <a asp-controller="ErasmusProgram" asp-action="Index" class="btn btn-primary">
                <i class="bi bi-search me-1"></i> Browse Programs
            </a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-primary">
                    <tr>
                        <th>University</th>
                        <th>Academic Year</th>
                        <th>Semester</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ErasmusProgram.Univerzitet</td>
                            <td>@item.ErasmusProgram.AkademskaGodina</td>
                            <td>@item.ErasmusProgram.Semestar</td>
                            <td>
                                @if (item.Status == StatusPrijave.UTOKU)
                                {
                                    <span class="badge bg-warning text-dark">In Progress</span>
                                }
                                else if (item.Status == StatusPrijave.USPJESNA)
                                {
                                    <span class="badge bg-success">Successful</span>
                                }
                                else if (item.Status == SistemErasmusRazmjena.Models.StatusPrijave.NEUSPJESNA)
                                {
                                    <form asp-action="Resubmit" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@item.ID" />
                                        <button type="submit" class="btn btn-primary btn-sm">Resubmit</button>
                                    </form>
                                }
                                else
                                {
                                    <span class="text-muted">No actions available</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-eye me-1"></i> View
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
