@model PrijavaSegmentedViewModel

@{
    ViewData["Title"] = "My Applications";
}

<div class="container">
    <h1 class="mb-4">Moje prijave</h1>

    <div class="row">
        <!-- In Progress Applications -->
        <div class="col-md-4">
            <h3 class="text-warning">U toku</h3>
            @if (!Model.UTOKU.Any())
            {
                <p>Nema prijava u toku.</p>
            }
            else
            {
                <ul class="list-group">
                    @foreach (var item in Model.UTOKU)
                    {
                        <li class="list-group-item">
                            <strong>@item.ErasmusProgram.Univerzitet</strong>
                            <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-sm btn-outline-primary float-end">
                                <i class="bi bi-eye"></i> Detalji
                            </a>
                        </li>
                    }
                </ul>
            }
        </div>

        <!-- Successful Applications -->
        <div class="col-md-4">
            <h3 class="text-success">Uspješna</h3>
            @if (!Model.USPJESNA.Any())
            {
                <p>Nema uspješnih prijava.</p>
            }
            else
            {
                <ul class="list-group">
                    @foreach (var item in Model.USPJESNA)
                    {
                        <li class="list-group-item">
                            <strong>@item.ErasmusProgram.Univerzitet</strong>
                            <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-sm btn-outline-primary float-end">
                                <i class="bi bi-eye"></i> Detalji
                            </a>
                        </li>
                    }
                </ul>
            }
        </div>

        <!-- Unsuccessful Applications -->
        <div class="col-md-4">
            <h3 class="text-danger">Neuspješna</h3>
            @if (!Model.NEUSPJESNA.Any())
            {
                <p>Nema neuspješnih prijava.</p>
            }
            else
            {
                <ul class="list-group">
                    @foreach (var item in Model.NEUSPJESNA)
                    {
                        <li class="list-group-item">
                            <strong>@item.ErasmusProgram.Univerzitet</strong>
                            <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-sm btn-outline-primary float-end">
                                <i class="bi bi-eye"></i> Detalji
                            </a>
                        </li>
                    }
                </ul>
            }
        </div>
    </div>
</div>
