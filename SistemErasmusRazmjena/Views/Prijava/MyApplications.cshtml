@model PrijavaSegmentedViewModel

@{
    ViewData["Title"] = "My Applications";
}

<div class="container">
    <h1 class="mb-4">My Applications</h1>

    <div class="row">
        <!-- In Progress Applications -->
        <div class="col-md-4">
            <h3 class="text-warning">In Progress</h3>
            @if (!Model.UTOKU.Any())
            {
                <p>No applications in progress.</p>
            }
            else
            {
                <ul class="list-group">
                    @foreach (var item in Model.UTOKU)
                    {
                        <li class="list-group-item">
                            <strong>@item.ErasmusProgram.Univerzitet</strong>
                            <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-sm btn-outline-primary float-end">
                                <i class="bi bi-eye"></i> View
                            </a>
                        </li>
                    }
                </ul>
            }
        </div>

        <!-- Successful Applications -->
        <div class="col-md-4">
            <h3 class="text-success">Successful</h3>
            @if (!Model.USPJESNA.Any())
            {
                <p>No successful applications.</p>
            }
            else
            {
                <ul class="list-group">
                    @foreach (var item in Model.USPJESNA)
                    {
                        <li class="list-group-item">
                            <strong>@item.ErasmusProgram.Univerzitet</strong>
                            <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-sm btn-outline-primary float-end">
                                <i class="bi bi-eye"></i> View
                            </a>
                        </li>
                    }
                </ul>
            }
        </div>

        <!-- Unsuccessful Applications -->
        <div class="col-md-4">
            <h3 class="text-danger">Unsuccessful</h3>
            @if (!Model.NEUSPJESNA.Any())
            {
                <p>No unsuccessful applications.</p>
            }
            else
            {
                <ul class="list-group">
                    @foreach (var item in Model.NEUSPJESNA)
                    {
                        <li class="list-group-item">
                            <strong>@item.ErasmusProgram.Univerzitet</strong>
                            <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-sm btn-outline-primary float-end">
                                <i class="bi bi-eye"></i> View
                            </a>
                        </li>
                    }
                </ul>
            }
        </div>
    </div>
</div>
