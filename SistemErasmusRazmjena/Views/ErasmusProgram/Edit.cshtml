@model SistemErasmusRazmjena.Models.ErasmusProgram

<h1>Uredi Erasmus program</h1>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ID" />

    <div class="form-group">
        <label asp-for="Semestar" class="control-label"></label>
        <select asp-for="Semestar" class="form-control">
            <option value="1" selected="@(Model.Semestar == 1)">Zimski</option>
            <option value="2" selected="@(Model.Semestar == 2)">Ljetni</option>
        </select>
        <span asp-validation-for="Semestar" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AkademskaGodina" class="control-label"></label>
        <input asp-for="AkademskaGodina" class="form-control" />
        <span asp-validation-for="AkademskaGodina" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Univerzitet" class="control-label"></label>
        <input asp-for="Univerzitet" class="form-control" />
        <span asp-validation-for="Univerzitet" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Opis" class="control-label"></label>
        <textarea asp-for="Opis" class="form-control"></textarea>
        <span asp-validation-for="Opis" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Sačuvaj</button>
        <a asp-action="Index" class="btn btn-secondary">Otkaži</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
