@model IEnumerable<SistemErasmusRazmjena.Models.ErasmusProgram>

@{
    ViewData["Title"] = "Erasmus Programs";
}

<div class="container">
    <h1 class="mb-4">Erasmus programi</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (User.IsInRole("Admin"))
    {
        <p>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-1"></i>Dodaj novi program
            </a>
        </p>
    }
    
    <div class="table-responsive erasmus-program-table">
        <table class="table table-striped table-hover">
            <thead class="table-primary">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Semestar)</th>
                    <th>@Html.DisplayNameFor(model => model.AkademskaGodina)</th>
                    <th>@Html.DisplayNameFor(model => model.Univerzitet)</th>
                    <th>@Html.DisplayNameFor(model => model.Opis)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Semestar)</td>
                    <td>@Html.DisplayFor(modelItem => item.AkademskaGodina)</td>
                    <td>@Html.DisplayFor(modelItem => item.Univerzitet)</td>
                    <td>@Html.DisplayFor(modelItem => item.Opis)</td>
                    <td class="action-links">
                            <a asp-action="Details" asp-route-id="@item.ID" class="text-primary d-inline-flex align-items-center">
                                <i class="bi bi-info-circle me-1"></i>Detalji
                            </a>

                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.ID" class="text-success">
                                <i class="bi bi-pencil-square me-1"></i>Uredi
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.ID" class="text-danger">
                                <i class="bi bi-trash me-1"></i>Obriši
                            </a>
                        }
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
