@model SistemErasmusRazmjena.Models.ErasmusProgram
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Identity
@using SistemErasmusRazmjena.Models
@inject UserManager<ApplicationUser> UserManager
@inject SistemErasmusRazmjena.Data.ApplicationDbContext Context
@{
    ViewData["Title"] = "Program Details";

    // Check if current user is a student
    var isStudent = User.IsInRole("Student");

    // Check if the student has already applied for this program
    var hasApplied = false;
    if (isStudent)
    {
        var currentUser = await UserManager.GetUserAsync(User);
        if (currentUser != null)
        {
            hasApplied = await Context.Prijave
                .AsQueryable()
                .AnyAsync(p => p.StudentID == currentUser.Id && p.ErasmusProgramID == Model.ID);
        }
    }
}

<div class="container mt-4">
    <h2>Program Details</h2>

    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">@Model.Univerzitet</h3>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-4">
                    <strong>Academic Year:</strong>
                </div>
                <div class="col-md-8">
                    @Model.AkademskaGodina
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4">
                    <strong>Semester:</strong>
                </div>
                <div class="col-md-8">
                    @(Model.Semestar == 1 ? "Winter" : "Summer")
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4">
                    <strong>Date Added:</strong>
                </div>
                <div class="col-md-8">
                    @Model.DateAdded.ToString("dd MMM yyyy")
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4">
                    <strong>Description:</strong>
                </div>
                <div class="col-md-8">
                    @Model.Opis
                </div>
            </div>
        </div>
        <div class="card-footer">
            @if (isStudent)
            {
                if (hasApplied)
                {
                    <div class="alert alert-success mb-3">
                        <i class="bi bi-check-circle-fill me-2"></i> You have already applied to this program
                    </div>
                    <div class="d-flex">
                        <a asp-controller="Prijava" asp-action="Details" asp-route-id="@Model.ID" class="btn btn-success me-2">
                            View Application
                        </a>


                        <a asp-controller="ErasmusProgram" asp-action="Index" class="btn btn-secondary">Back to Programs</a>
                    </div>
                }
                else
                {
                    <div class="d-flex">
                        <a asp-controller="Prijava" asp-action="Create" asp-route-programId="@Model.ID" class="btn btn-primary me-2">
                            Apply for Program
                        </a>
                        <a asp-controller="ErasmusProgram" asp-action="Index" class="btn btn-secondary">Back to Programs</a>
                    </div>
                }
            }
            else
            {
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            }
        </div>
    </div>
</div>

