@model List<SistemErasmusRazmjena.Models.ViewModels.ProgramViewModel>
@{
    ViewData["Title"] = "Dostupni Erasmus programi";
}

<div class="container mt-4">
    <h2>Dostupni Erasmus programi</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Zatvori"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Zatvori"></button>
        </div>
    }

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm @(item.HasApplied ? "border-success" : "")">
                    <div class="card-body">
                        <h5 class="card-title">@item.Program.Univerzitet</h5>
                        <h6 class="card-subtitle mb-2 text-muted">
                            @item.Program.AkademskaGodina, @(item.Program.Semestar == 1 ? "Zimski" : "Ljetni") semestar
                        </h6>
                        <p class="card-text">
                            @if (item.Program.Opis?.Length > 150)
                            {
                                @(item.Program.Opis.Substring(0, 150) + "...")
                            }
                            else
                            {
                                @item.Program.Opis
                            }
                        </p>
                    </div>
                    <div class="card-footer bg-transparent">
                        @if (item.HasApplied)
                        {
                            <div class="alert alert-success mb-3">
                                <i class="bi bi-check-circle-fill me-2"></i> Već ste se prijavili na ovaj program
                            </div>
                            <div class="d-flex justify-content-between">
                                <a asp-action="Details" asp-route-id="@item.Program.ID" class="btn btn-outline-secondary">
                                    Detalji programa
                                </a>
                                <a asp-action="ApplicationDetails" asp-route-programId="@item.Program.ID" class="btn btn-success">
                                    Prikaz prijave
                                </a>
                            </div>
                        }
                        else
                        {
                            <div class="d-flex justify-content-between align-items-center">
                                <a asp-action="Details" asp-route-id="@item.Program.ID" class="btn btn-outline-secondary">
                                    Detalji
                                </a>
                                <form asp-action="Apply" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="programId" value="@item.Program.ID" />
                                    <button type="submit" class="btn btn-primary">Prijavi se</button>
                                </form>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>
