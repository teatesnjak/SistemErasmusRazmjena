@model SistemErasmusRazmjena.Models.Prijava
@{
    ViewData["Title"] = "Application Details";
}

<div class="container mt-4">
    <h2>Detalji prijave</h2>

    <div class="card mb-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <span>Detalji programa</span>
            <span class="badge bg-light text-dark">@Model.DateCreated.ToString("dd MMM yyyy")</span>
        </div>
        <div class="card-body">
            <h4>@Model.ErasmusProgram.Univerzitet</h4>
            <p class="text-muted">
                @Model.ErasmusProgram.AkademskaGodina,
                @(Model.ErasmusProgram.Semestar == 1 ? "Winter" : "Summer") Semester
            </p>
            <div class="alert alert-info">
                <strong>Application Status:</strong>
                @switch (Model.Status)
                {
                    case StatusPrijave.UTOKU:
                        <span class="badge bg-warning text-dark">In Progress</span>
                        break;
                    case StatusPrijave.USPJESNA:
                        <span class="badge bg-success">Successful</span>
                        break;
                    case StatusPrijave.NEUSPJESNA:
                        <span class="badge bg-danger">Unsuccessful</span>
                        break;
                    default:
                        <span class="badge bg-secondary">Unknown</span>
                        break;
                }
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <span>Dokumentacija</span>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <div class="card mb-2 @(Model.Dokumentacija.CV ? "border-success" : "border-danger")">
                        <div class="card-body text-center">
                            <h5>CV</h5>
                            @if (Model.Dokumentacija.CV)
                            {
                                <i class="fas fa-check-circle text-success fa-2x"></i>
                                <p class="mt-2 mb-0">Dostavljen</p>
                            }
                            else
                            {
                                <i class="fas fa-times-circle text-danger fa-2x"></i>
                                <p class="mt-2 mb-0">Nije dostavljen</p>
                            }
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card mb-2 @(Model.Dokumentacija.MotivacionoPismo ? "border-success" : "border-danger")">
                        <div class="card-body text-center">
                            <h5>Motivaciono pismo</h5>
                            @if (Model.Dokumentacija.MotivacionoPismo)
                            {
                                <i class="fas fa-check-circle text-success fa-2x"></i>
                                <p class="mt-2 mb-0">Dostavljeno</p>
                            }
                            else
                            {
                                <i class="fas fa-times-circle text-danger fa-2x"></i>
                                <p class="mt-2 mb-0">Nije dostavljeno</p>
                            }
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card mb-2 @(Model.Dokumentacija.UgovorOUcenju ? "border-success" : "border-danger")">
                        <div class="card-body text-center">
                            <h5>Ugovor o učenju</h5>
                            @if (Model.Dokumentacija.UgovorOUcenju)
                            {
                                <i class="fas fa-check-circle text-success fa-2x"></i>
                                <p class="mt-2 mb-0">Dostavljen</p>
                            }
                            else
                            {
                                <i class="fas fa-times-circle text-danger fa-2x"></i>
                                <p class="mt-2 mb-0">Nije dostavljen</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-between">
        <a asp-action="AvailablePrograms" class="btn btn-secondary">Nazad na programe</a>
    </div>
</div>
