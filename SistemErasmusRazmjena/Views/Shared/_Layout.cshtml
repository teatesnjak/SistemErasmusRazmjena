<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistem Erasmus Razmjena</title>
    <!-- Use a single Bootstrap reference -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/erasmus-program.css" asp-append-version="true" />
    <!-- Bootstrap icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

    <!-- Fallback for Bootstrap CSS -->
    <script>
        // Use a more reliable way to check if the Bootstrap styles loaded
        let bootstrapCssLoaded = false;
        for (let i = 0; i < document.styleSheets.length; i++) {
            try {
                if (document.styleSheets[i].href &&
                    document.styleSheets[i].href.includes('bootstrap')) {
                    bootstrapCssLoaded = true;
                    break;
                }
            } catch (e) { /* Some CORS issues might occur, just ignore */ }
        }

        if (!bootstrapCssLoaded) {
            const link = document.createElement('link');
            link.rel = 'stylesheet';
            link.href = 'https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css';
            document.head.appendChild(link);
            console.log('Loaded Bootstrap CSS from CDN fallback');
        }
    </script>
</head>
<body>
    <header>

        <!-- Enhanced header with more prominent login/register buttons -->
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-globe me-2"></i>Sistem Erasmus Razmjena
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="ErasmusProgram" asp-action="Index">Programs</a>
                        </li>
                        @if (User.IsInRole("Student"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Prijava/MyApplications">My Applications</a>
                            </li>
                        }
                        @if (User.IsInRole("Admin") || User.IsInRole("ECTSKoordinator"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Prijava/Index">Applications</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Prijava" asp-action="CreateCoordinator">Add Coordinator</a>
                            </li>
                        }

                    </ul>
                    <div class="d-flex">
                        @if (User?.Identity?.IsAuthenticated == true)
                        {
                            <span class="navbar-text me-3">
                                Hello, @User.Identity.Name!
                            </span>
                            <form asp-controller="Account" asp-action="Logout" method="post">
                                <button type="submit" class="btn btn-outline-danger">Logout</button>
                            </form>
                        }
                        else
                        {
                            <a href="/Account/Login" class="btn btn-outline-primary me-2">
                                <i class="bi bi-box-arrow-in-right me-1"></i>Login
                            </a>
                            <a href="/Account/Register" class="btn btn-primary">
                                <i class="bi bi-person-plus me-1"></i>Register
                            </a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Enhanced footer with clearer contact information -->
    <footer class="border-top footer text-muted py-4 bg-dark text-white mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5>Contact Information</h5>
                    <p>
                        <i class="bi bi-envelope me-2"></i>Admin:
                        <a href="mailto:admin@erasmus.com" class="text-white text-decoration-underline">admin@erasmus.com</a>
                    </p>
                    <p>
                        <i class="bi bi-geo-alt me-2"></i>University of Zenica Rectorate:<br />
                        <span class="ms-4">Fakultetska 3, 72000 Zenica</span>
                    </p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p>&copy; 2025 - Sistem Erasmus Razmjena</p>
                    <p>
                        <a href="/Home/Privacy" class="text-white">Privacy</a> |
                        <a href="/Home/Index" class="text-white">Terms of Service</a>
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <!-- jQuery must be loaded before Bootstrap JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- Try loading local Bootstrap JS first -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Fallback to CDN if local file fails -->
    <script>
        // Check if Bootstrap JS loaded correctly
        if (typeof bootstrap === 'undefined') {
            const script = document.createElement('script');
            script.src = 'https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js';
            document.body.appendChild(script);
            console.log('Loaded Bootstrap JS from CDN fallback');
        }
    </script>
    <!-- Correct path to site.js -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>

