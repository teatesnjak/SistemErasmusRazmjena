@model SistemErasmusRazmjena.Models.Predmet

@{
    ViewData["Title"] = "Edit";
}

<h1>Uredi</h1>

<h4>Predmet</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PredmetID" />
            <div class="form-group">
                <label asp-for="PrijedlogPredmetaID" class="control-label"></label>
                <select asp-for="PrijedlogPredmetaID" class="form-control" asp-items="ViewBag.PrijedlogPredmetaID"></select>
